generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model FamilyConnection {
  id            String   @id @default(uuid())
  requesterId   String   // Quem enviou o convite
  requestedId   String   // Quem recebeu o convite
  status        String   @default("pending") // pending, accepted, rejected
  permissions   String   @default("view") // view, view_notifications, full
  relationship  String?  // filho, filha, cuidador, etc
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  requester     User     @relation("FamilyRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  requested     User     @relation("FamilyRequested", fields: [requestedId], references: [id], onDelete: Cascade)
  
  @@unique([requesterId, requestedId])
  @@map("family_connections")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  picture       String?
  googleId      String   @unique
  streak        Int      @default(0)
  lastActiveDate DateTime?
  age           Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  medications   Medication[]
  reminders     Reminder[]
  medicationLogs MedicationLog[]
  
  // Relações de família
  sentConnections     FamilyConnection[] @relation("FamilyRequester")
  receivedConnections FamilyConnection[] @relation("FamilyRequested")
  
  @@map("users")
}

model Medication {
  id            String   @id @default(uuid())
  userId        String
  name          String
  dosage        String
  frequency     String
  startDate     DateTime
  endDate       DateTime?
  instructions  String?
  color         String   @default("#6366F1")
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reminders     Reminder[]
  logs          MedicationLog[]
  
  @@map("medications")
}

model Reminder {
  id            String   @id @default(uuid())
  userId        String
  medicationId  String
  time          String
  days          String[]
  enabled       Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  medication    Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  
  @@map("reminders")
}

model MedicationLog {
  id            String   @id @default(uuid())
  userId        String
  medicationId  String
  takenAt       DateTime @default(now())
  scheduledTime String
  status        String   @default("taken") // taken, skipped, late
  createdAt     DateTime @default(now())
  
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  medication    Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  
  @@index([userId, takenAt])
  @@map("medication_logs")
}